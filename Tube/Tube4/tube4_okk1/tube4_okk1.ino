void Tube_Set_Time() {
  int a = get_hourss() / 10; if (a == 0) a = -1;
  int b = get_hourss() % 10;

  a = get_minute() / 10; if (a == 0) a = -1;
  b = get_minute() % 10;

  int c = get_second() / 10; //if (c == 0)c = -1;
  int d = get_second() % 10;

  Tube4_set(a, b, c, d, 2);
}
