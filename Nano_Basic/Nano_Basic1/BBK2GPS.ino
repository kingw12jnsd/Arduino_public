  //--------------------------------------------------------
  sprintf(sDate, "%02d-%02d-%02d", year(t), month(t), day(t));
  sprintf(sTime, "%02d:%02d:%02d", hour(t), minute(t), second(t));
  lg(sDate); lg(" "); lg(sTime);
  //--------------------------------------------------------
}
