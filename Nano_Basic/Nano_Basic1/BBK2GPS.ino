static const int GPSBaud = 9600;
int gpsZone = +8;//时区
//===================================================================
//#define  gpsTR  Serial2
SoftwareSerial gpsTR(10, 11);//TX,RX
TinyGPSPlus gpsTY;
//===================================================================
void GPS_setup() {
  gpsTR.begin(GPSBaud);
  lgln(F("gps.Serial.start!"));
}
//===================================================================
static void GPS_Feed()
{
  //-------------------------------
  gpsTR.listen();
  while (gpsTR.available()) {
    char c = gpsTR.read();
    gpsTY.encode(c);
    //lgs.write(c);
  }
  //-------------------------------
}
