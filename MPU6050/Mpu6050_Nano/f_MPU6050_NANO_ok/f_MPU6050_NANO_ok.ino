#include "bIMU.h"
//===================================================================
int Pinx[6] = {A0, A1, A2, A3, A6, A7};
//===================================================================
void setup() {
  //-------------------------------------
  int n = sizeof(Pinx) / sizeof(Pinx[0]);
  for (int i = 0; i < n; i++) pinMode(Pinx[i], INPUT);
  //-------------------------------------
  lgsetup(F("MPU6050_IMU"));
  MPU6050_setup();
  //-------------------------------------
  tLoop_Setup();
  //-------------------------------------
}
void loop() {
  work();
}
//===================================================================
void work() {
  //------------------------------------------
  if (ts_loop(0.02)) {
    IMU_loop();
  }
  if (ts_loop(1)) {
    IMU_show();
  }
  //------------------------------------------
}
