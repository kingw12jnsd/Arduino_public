//===============================================
void setup(void)
{
  //--------------------------------------------
  lgsetup("My Cup Temperature!");
  //--------------------------------------------
  LCD1602_setup(); LCD1602_Clear(); LCD1602_Show(0, 0, F("AVW_Nano_Start!"));  
  //--------------------------------------------
  wifi_Init(true); lewei_time_init();
  //--------------------------------------------
  tLoop_Setup();
  //--------------------------------------------
}
//===============================================
void loop(void) {
  //------------------------------------------
  work(); //smartDelay(10 * 1000);
  //------------------------------------------
  lgFeed(); wfs_loop();
  //------------------------------------------
}
//===============================================
void work() {
  //------------------------------------------
  if (t20s_loop()) {
    lgln("Lewei_Loop()");
    Lewei_Loop(); lewei_time_exp();  
    lewei_time_show();  
  }
  //------------------------------------------
  lgFeed(); wfs_loop();
  //------------------------------------------
}
//===============================================
static void smartDelay(unsigned long ms) {
  unsigned long start = millis(); do {
    //------------------------------------------
    lgFeed(); wfs_loop();
    //------------------------------------------
  } while (millis() - start < ms);
}
