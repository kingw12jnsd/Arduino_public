void TimeAdds()
{
  //-------------------------------------------------------------------
  time_second++;
  //-------------------------------------------------------------------
  if(time_second==60){
    time_second=0;
    time_minute++;
    if(time_minute==60){
      time_minute=0;
      time_hour++;
      if(time_hour==24){
        time_hour=0;
      }
    }
  }
  //-------------------------------------------------------------------
}
